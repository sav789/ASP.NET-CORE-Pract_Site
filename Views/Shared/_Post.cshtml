@inject ASP.NET_CORE_PractSite.Models.FormattingService Format 
@model ASP.NET_CORE_PractSite.Models.Post

<article class="blog-post">
    <h1>@Model.Title</h1>
    <div class="details">
        Posted <span>@Format.AsReadableDate(Model.Posted)</span> by <span>@Model.Author</span>
    </div>
    <div class="content">
        @Model.Body
    </div>
</article>




